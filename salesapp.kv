<Salecontent>
    
    id: salescontent
    height:300
    width:650
    size_hint_x: None
    size_hint_y: None
    padding: 25
    spacing: 25
    
    MDCard:
        MDBoxLayout:
            orientation: 'vertical'

            MDFloatLayout:

                MDTextField:
                    id: cuscheck
                    hint_text: "Email or PhoneNo"
                    
                    helper_text: "Input --> Enter"
                    helper_text_mode: "on_focus"
                    icon_left: "human-queue"
                    icon_left_color: app.theme_cls.primary_color
                    
                    size_hint_x:None
                    width:150
                    write_tab: False
                    icon_right_color: app.theme_cls.primary_color
                    pos_hint:{'center_x': 0.5, 'center_y': 0.6}
                    on_text_validate: app.root.get_screen('main').customercheck(self.text)

                        
                MDIconButton:
                    id: showicon
                    icon: ""
                    theme_icon_color: "Custom"
                    pos_hint: {"center_y": .6,"center_x": .9}
                    theme_text_color: "Hint"
            
                MDFloatingActionButton:
                    id: fabadd
                    icon: "account-plus"
                    pos_hint:{'center_x': 0.5, 'center_y': 0.3}
                    md_bg_color: app.theme_cls.primary_color
                    disabled: True
                    on_release: app.root.get_screen('main').newcust()
    MDGridLayout:
        cols: 2

        MDLabel:
            id: stest
            font_style: 'H6'
            text: "Total Amount"
            width:100
            size_hint_x: None
    
        MDLabel:
            id: tamount
            font_style: 'H4'
            text: app.root.get_screen('main').ids.showtotal.text
            parent_background: "orange"
        MDLabel:
            font_style: 'H6'
            text: "Amount"
            width:100
            size_hint_x: None
            
        MDTextField:
            id: camount
            input_filter: 'int'
            icon_left: "currency-inr"
            icon_left_color: app.theme_cls.primary_color
            font_size: '20dp'
            size_hint_x:None
            width:100
            write_tab: False
            on_text: app.root.get_screen('main').bamount(self.text)

        MDLabel:
            font_style: 'H6'
            text: "Balance"
            width:100
            size_hint_x:None
            
        MDLabel:
            id: sbalance
            font_style: 'H4'
            text: "0"
            width: 100
            size_hint_x:None

        MDFillRoundFlatIconButton:
            icon: "cash-check"
            text: "complete payment"
            md_bg_color: "orange"
            on_release: app.root.get_screen('main').salescomplete()
                
