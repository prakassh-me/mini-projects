<MainScreen>:
    name: 'main'
    MDBoxLayout:
        orientation: "horizontal"
        adaptive_height: True
        size_hint: None, None
        size: 150,200
        padding: 10
         
        pos_hint: {'center_x': .2, 'center_y': .8}
        MDLabel:
            text: "Dark Mode"

        MDSwitch:
            # giving position to the switch on screen
            
            on_active: app.themeswitch(*args)
            

    MDTextField:
        id: search
        pos_hint: {'center_x': 0.2,'center_y':0.7}
        hint_text: "Add Product"
        helper_text: "Search --> Enter --> Add"
        helper_text_mode: "on_focus"
        icon_right: "cart-plus"
        icon_right_color: app.theme_cls.primary_color
        size_hint_x:None
        width:150
        focus: True
        write_tab: False
        on_text: root.dddd(self.text)
        on_text_validate: root.askqty()

    MDTextField:
        id: deletesearch
        pos_hint: {'center_x': 0.15,'center_y':0.4}
        hint_text: "Delete list"
        helper_text: "Search --> Enter --> Delete"
        helper_text_mode: "on_focus"
        icon_right: "cart-minus"
        icon_right_color: app.theme_cls.primary_color
        size_hint_x:None
        width:150
        write_tab: False
        on_text: app.root.get_screen('main').searchdelete(self.text)
        on_text_validate: app.root.get_screen('main').deleterows()
    

    MDFillRoundFlatIconButton:
        pos_hint: {'center_x': 0.5,'center_y':0.05}
        icon: "exit-to-app"
        text: "Close"
        md_bg_color: "orange"
        on_release: 
			app.root.current = "Login"
			root.manager.transition.direction = "right"
    

    MDCard:
        id: tcard
        size_hint: 0.2, 0.3
        
        pos_hint: {"center_x": 0.85, "center_y": 0.7}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            font_style: 'H6'
            text: "Total Amount"
        MDLabel:
            id: showtotal
            font_style: 'H4'
            text: "0"
            parent_background: "orange"

        MDFillRoundFlatIconButton:
            icon: "cart-check"
            text: "ok"
            md_bg_color: "orange"
            on_release: root.sale()
            

        

    

    
        
    
    
        
    