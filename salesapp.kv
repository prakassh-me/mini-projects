<LoginScreen>:
    name: 'Login'
    MDCard:
        size_hint: None, None
        size: 300, 250
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'
    

        MDTextField:
            id: username
            hint_text: "username"
            helper_text: "Employee Username"
            helper_text_mode: "on_focus"
            icon_left: "account-circle"
            write_tab: False
            icon_left_color: app.theme_cls.primary_color
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint_x:None
            width:200
        FloatLayout:
    
            MDTextField:
                id: userpassword
                hint_text: "password"
                helper_text: "Employee Password"
                helper_text_mode: "on_focus"
                icon_left: "key-variant"
                write_tab: False
                icon_right_color: app.theme_cls.primary_color
                pos_hint:{'center_x': 0.5, 'center_y': 0.5}
                size_hint_x:None
                width:200
                password: True
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5,"center_x": .9}
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    userpassword.password = False if userpassword.password is True else True
    
        MDFillRoundFlatIconButton:
            icon: "login"
            text: "Login"
            pos_hint: {'center_x': 0.5}
            md_bg_color: "orange"
            on_press: root.logger()

<Newcustomeradd>
