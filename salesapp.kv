        id: username
        hint_text: "username"
        helper_text: "Employee Username"
        helper_text_mode: "on_focus"
        icon_left: "account-circle"
        icon_left_color: app.theme_cls.primary_color
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
        size_hint_x:None
        width:300

