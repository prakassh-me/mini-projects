        on_text_validate: app.root.get_screen('main').newcustadd(self.text)
        size_hint_x:None
        width:100
    MDTextField:
        id: custphonenumber
        hint_text: "PhoneNumber"
        write_tab: False
        helper_text: "Input --> Enter"
        helper_text_mode: "on_focus"
        icon_left: "human-queue"
        icon_left_color: app.theme_cls.primary_color
        on_text_validate: app.root.get_screen('main').newcustadd(self.text)
        size_hint_x:None
        width:150
    MDTextField:
        id: custemail
        hint_text: "Email"
        write_tab: False
        helper_text: "Input --> Enter"
        helper_text_mode: "on_focus"
        icon_left: "human-queue"
        icon_left_color: app.theme_cls.primary_color
        on_text_validate: app.root.get_screen('main').newcustadd(self.text)
        size_hint_x:None
        width:150
